<% include ../partials/headers %>

    <div class="row">
        <h1 style="text-align: center">Edit <%= place.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/places/<%=place._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="place[name]" value="<%= place.name %>">
                </div>
                <div class="form-group">
                     <input class="form-control" type="number" name="place[price]" value="<%=place.price%>" min="0.01" step="0.01"> 
                </div>
                <% if(currentUser && currentUser.isAdmin) {%>
                  <div class="form-group">
                    <input class="form-control" type="text" name="place[image]" id="image" value="<%= place.image %>" required>
                    <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
                </div>
                <% } else {%>
                 <div class="form-group">
                    <input class="form-control" type="text" name="place[image]" id="image" pattern="^https:\/\/images\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." value="<%= place.image %>" required>
                    <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
                </div>
                <% } %>
                <div class="form-group">
                    <input class="form-control" type="text" name="place[description]" value="<%= place.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/places">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>

