<% include ../partials/headers %>

    <div class="container">
             <header class="jumbotron">
                <div class="container">
                    <h1>Welcome to TV Shows' Estates</h1>
                    <p> View places from all tv shows!</p>
                    <p><a class="btn btn-primary btn-large" href="/places/new">Add new place</a></p>
                </div>
            </header>
            <div class="row text-center">
                    <% places.forEach(function(place){%>
                        <div class="col-md-3 col-sm-6">
                            <div class="thumbnail">
                                <img src="<%=place.image%>">
                                <div class="caption">
                                    <h4><%= place.name %></h4>
                                </div>     
                                <p>
                                    <a href="/places/<%=place._id %>" class="btn btn-primary"> More Info </a>
                                </p>
                            </div>
                        </div>
                    <% });%>
            </div>
          
    </div>
<% include ../partials/footer %>
